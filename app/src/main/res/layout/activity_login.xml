<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.marievinhmau.projettram.LoginActivity">



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingTop="50dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- Nom Utilisateur -->
            <TextView
                android:id="@+id/PhoneTextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Numero de Téléphone"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="105dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/PhoneNb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                tools:layout_editor_absoluteX="141dp"
                tools:layout_editor_absoluteY="93dp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <!-- Mot de passe -->
            <TextView
                android:id="@+id/MdpTextView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Mot de passe"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="217dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/Mdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="141dp"
                tools:layout_editor_absoluteY="208dp"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/NewUserBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nouvel Utilisateur"
                android:layout_weight="1"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:textColor="@color/white"
                android:background="@color/btn"
                />

            <Button
                android:id="@+id/LoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connexion"
                android:layout_weight="1"
                android:layout_marginLeft="25dip"
                android:layout_marginRight="25dip"
                android:textColor="@color/white"
                android:background="@color/btn"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="100dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ErreurLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textColor="@color/red"

                />

        </LinearLayout>


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
